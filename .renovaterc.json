{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", ":dependencyDashboard"],
  "packageRules": [
    {
      "automerge": true,
      "automergeStrategy": "merge-commit",
      "automergeType": "branch",
      "matchDepTypes": ["*"],
      "recreateWhen": "always"
    },
    {
      "matchManagers": ["custom.regex"],
      "matchCurrentVersion": "latest",
      "rangeStrategy": "pin",
      "pinDigests": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "go",
      "versioningTemplate": "semver",
      "fileMatch": ["^.github/workflows/[^/]+\\.ya?ml$"],
      "matchStrings": ["go\\s+install\\s+(?<depName>[^@\\s]+)@(?<currentValue>latest|v?\\d+\\.\\d+\\.\\d+)"]
    }
  ],
  "platformAutomerge": true,
  "postUpdateOptions": ["gomodTidyE", "gomodMassage", "gomodUpdateImportPaths"],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0
}
