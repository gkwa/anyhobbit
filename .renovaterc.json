{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", ":dependencyDashboard"],
  "packageRules": [
    {
      "automerge": true,
      "automergeStrategy": "merge-commit",
      "automergeType": "branch",
      "matchDepTypes": ["*"],
      "recreateWhen": "always"
    },
    {
      "matchManagers": ["custom.regex"],
      "matchDepTypes": ["go-install"],
      "matchCurrentValue": "/^latest$/",
      "rangeStrategy": "pin"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^.github/workflows/[^/]+\\.ya?ml$"],
      "matchStrings": ["go\\s+install\\s+(?<depName>[^@\\s]+)@(?<currentValue>\\S+)"],
      "datasourceTemplate": "go",
      "depTypeTemplate": "go-install",
      "versioningTemplate": "semver-coerced"
    }
  ],
  "platformAutomerge": true,
  "postUpdateOptions": ["gomodTidyE", "gomodMassage", "gomodUpdateImportPaths"],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0
}
